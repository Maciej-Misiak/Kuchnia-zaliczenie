@model IEnumerable<LevelType>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-5">
            <h2 class="text-primary">Lista poziomów trudności</h2>
        </div>
        <div class="col-6">
            <a asp-controller="LevelType" asp-action="Create" class="btn btn-primary">
                Stwórz nowy poziom trudności
            </a>
    </div>

<br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nazwa kategorii
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>    
                <td width="90%">    
                    @obj.Name
                </td>
                <td>
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="LevelType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 justify">Edytuj</a>
                         <a asp-controller="LevelType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Usuń</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>   
