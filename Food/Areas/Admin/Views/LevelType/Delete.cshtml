@model LevelType

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Usuń poziom trudności</h2>
        <hr />
    </div>
    
    <div class="mb-3">
        <label asp-for="Name">Poziom trudności</label>
        <input asp-for="Name" disabled class="form-control" />       
    </div>
    <button type="submit" class="btn btn-danger" style="width:150px">Usuń</button>
    <a asp-controller="LevelType" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Wróc do listy
    </a>
    </div>
</form>

@section Scripts{
    @{
  <partial name="_ValidationScriptsPartial" />
    }
}

