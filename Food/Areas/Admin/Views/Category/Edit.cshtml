@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Edytuj kategorię</h2>
        <hr />
    </div>
    
    <div class="mb-3">
        <label asp-for="Name">Nazwa kategorii</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Edytuj</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Wróc do listy
    </a>
    </div>
</form>


@section Scripts{
    @{
  <partial name="_ValidationScriptsPartial" />
    }
}

