@model IEnumerable<Food.Models.Dish>
    
<div class="row pb-3">
    @foreach(var dish in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px">
                    <div class="card" style="text-align: center;">
                        <img src="@dish.ImageUrl" class="card-imgtop-0 rounded"/>
                        
                        <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@dish.Name</p>
                            <p class="card-title text-info">Kategoria: @dish.Category.Name</p>
                        </div>
                        <div class="pl-1">                            
                            <p class="card-title text-info">Poziom trudności: @dish.LevelType.Name</p>
                            <p class="card-title h7 text-primary">Koszt: @dish.Price.ToString("0.00 zł")</p>
                        </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@dish.Id">
                            Szczegóły
                        </a>
                    </div>
                    
                </div>
            </div>
        </div>
        
    
    }

</div>
